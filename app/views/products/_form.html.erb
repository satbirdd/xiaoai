        <%= property.name %>
        <span>
          <% property.property_items.each do |item| %>
            <button><%= item.name %></button>
          <% end %>
        </span>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
